package com.tap.app;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import java.util.Scanner;
import java.sql.PreparedStatement;

public class program8 {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		try {
			String url="jdbc:mysql://localhost:3306/jdbcClasses";
			String username="root";
			String password="Asha";
			String choice;
			String INSERT_QUERY="INSERT into employee1 (id,name,email,department,salary) values(?,?,?,?,?) ";
			// Load the Driver
			Class.forName("com.mysql.cj.jdbc.Driver");
			// Establish connection to database
			Connection con=DriverManager.getConnection(url, username, password);
			// Create SQL Statement
			PreparedStatement stmt=con.prepareStatement(INSERT_QUERY);
			do{
				System.out.println("Enter the id:");
				int id=scan.nextInt();
				System.out.println("Enter the name:");
				String name=scan.next();
				System.out.println("Enter the email:");
				String email=scan.next();
				System.out.println("Enter the department:");
				String department=scan.next();
				System.out.println("Enter the salary:");
				int salary=scan.nextInt();
				stmt.setInt(1, id);
				stmt.setString(2,name);
				stmt.setString(3, email);
				stmt.setString(4,department);
				stmt.setInt(5,salary);
				stmt.addBatch();
				System.out.println("Do you want to enter details of Employee?(Yes/No)");
				choice=scan.next();
			}
			// Execute SQL queries
			while(choice.equalsIgnoreCase("Yes"));
			int[] res=stmt.executeBatch();
			program1.printTable(con);
			
		}
		catch(ClassNotFoundException e) {
			e.printStackTrace();
		}
		catch(SQLException e) {
			e.printStackTrace();
		}

	}

}
