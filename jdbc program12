package com.tap.app;

import java.sql.CallableStatement;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;

import java.util.Scanner;
// retrieve the number of employees salary is less than specific salary Stored procedure:

public class program12 {
	static String url="jdbc:mysql://localhost:3306/jdbcClasses";
	static String username="root";
	static String password="Asha";
	private static Connection con;

	public static void main(String[] args) {
		try {
			//Load the driver
		Class.forName("com.mysql.cj.jdbc.Driver");
		// Establish connection to database
		con = DriverManager.getConnection(url, username, password);
		// create statement(prepareCall)
		CallableStatement call=con.prepareCall("{call emp_details(?)}");
		// Set the parameters 
		System.out.println("Enter the salary");
		Scanner scan= new Scanner(System.in);
		int sal=scan.nextInt();
		call.setInt(1,sal);
		//call.registerOutParameter(1, Types.INTEGER);
		// execute the query
		call.execute();
		//retrieve the output parameter value
		ResultSet res=call.getResultSet();
		System.out.println("---------------------------------------------------");
		
		while(res.next()) {
			System.out.printf("| %d | %-17s | %d| %-6s | %-7s |\n",res.getInt("id"),res.getString("email"),res.getInt("salary"),res.getString("department"),res.getString("name"));
		}
		System.out.println("---------------------------------------------------");
		
		

	}
		catch(ClassNotFoundException e) {
			e.printStackTrace();
		}
		catch(SQLException e) {
			e.printStackTrace();
		}

}
}
